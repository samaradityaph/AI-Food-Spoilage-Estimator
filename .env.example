# =============================================================================
# Environment Variables for Shelf Life Predictor
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to git!

# =============================================================================
# REQUIRED: API Keys
# =============================================================================

# Hugging Face API Token (Required)
# Get yours at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=hf_your_token_here

# =============================================================================
# PRODUCTION SETTINGS (Railway Deployment)
# =============================================================================

# Set to 'production' for Railway deployment
FLASK_ENV=production

# Allowed origins for CORS (comma-separated, use your Railway URL)
# Example: https://your-app.up.railway.app
ALLOWED_ORIGINS=*

# =============================================================================
# SECURITY SETTINGS (Optional - defaults shown)
# =============================================================================

# Rate limiting: max requests per time window per IP
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Maximum upload size in bytes (default: 10MB)
MAX_CONTENT_LENGTH=10485760
